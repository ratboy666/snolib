-INCLUDE 'SEQ.INC'
-INCLUDE 'STROUT.INC'
-INCLUDE 'TRIMB.INC'
@

<<UBAN>>=
         TERMINAL = 'UBAN (SAT NOV 23 23:02:17 EST 2013)'
*
         A1 =    '┌────┐/ ┌─┐  /┌────┐/┌────┐/┌┐  ┌┐/┌────┐/┌┐    /'
         A2 =    '│┌──┐│/ └┐│  /└───┐│/└───┐│/││  ││/│┌───┘/││    /'
         A3 =    '││  ││/  ││  /┌───┘│/┌───┘│/│└──┘│/│└───┐/│└───┐/'
         A4 =    '││  ││/  ││  /│┌───┘/└───┐│/└───┐│/└───┐│/│┌──┐│/'
         A5 =    '│└──┘│/ ┌┘└┐ /│└───┐/┌───┘│/    ││/┌───┘│/│└──┘│/'
         A6 =    '└────┘/ └──┘ /└────┘/└────┘/    └┘/└────┘/└────┘/'
         A1 = A1 '┌────┐/┌────┐/┌────┐/'
         A2 = A2 '└───┐│/│┌──┐│/│┌──┐│/'
         A3 = A3 '    ││/│└──┘│/│└──┘│/'
         A4 = A4 '    ││/│┌──┐│/└───┐│/'
         A5 = A5 '    ││/│└──┘│/    ││/'
         A6 = A6 '    └┘/└────┘/    └┘/'
         A1 = A1 '┌────┐/┌────┐/┌────┐/┌────┐/┌────┐/┌────┐/┌────┐/'
         A2 = A2 '│┌──┐│/│┌──┐│/│┌───┘/│┌─┐ │/│┌───┘/│┌───┘/│┌───┘/'
         A3 = A3 '││  ││/│└──┘│/││    /││ └┐│/│└───┐/│└───┐/││┌──┐/'
         A4 = A4 '│└──┘│/│┌──┐│/││    /││ ┌┘│/│┌───┘/│┌───┘/││└─┐│/'
         A5 = A5 '│┌──┐│/│└──┘│/│└───┐/│└─┘ │/│└───┐/││    /│└──┘│/'
         A6 = A6 '└┘  └┘/└────┘/└────┘/└────┘/└────┘/└┘    /└────┘/'
         A1 = A1 '┌┐  ┌┐/ ┌──┐ /    ┌┐/┌┐  ┌┐/┌┐    /┌┐  ┌┐/┌┐  ┌┐/'
         A2 = A2 '││  ││/ └┐┌┘ /    ││/││ ┌┘│/││    /│└┐┌┘│/│└┐ ││/'
         A3 = A3 '│└──┘│/  ││  /    ││/│└─┘┌┘/││    /│ └┘ │/│ └┐││/'
         A4 = A4 '│┌──┐│/  ││  /┌┐  ││/│┌─┐└┐/││    /│┌──┐│/│┌┐└┘│/'
         A5 = A5 '││  ││/ ┌┘└┐ /│└──┘│/││ └┐│/│└───┐/││  ││/││└─┐│/'
         A6 = A6 '└┘  └┘/ └──┘ /└────┘/└┘  └┘/└────┘/└┘  └┘/└┘  └┘/'
         A1 = A1 '┌────┐/┌────┐/┌────┐/┌───┐ /┌────┐/┌────┐/┌┐  ┌┐/'
         A2 = A2 '│┌──┐│/│┌──┐│/│┌──┐│/│┌─┐└┐/│┌───┘/└─┐┌─┘/││  ││/'
         A3 = A3 '││  ││/│└──┘│/││  ││/││ └┐│/│└───┐/  ││  /││  ││/'
         A4 = A4 '││  ││/│┌───┘/││ ┌┘│/│└──┘│/└───┐│/  ││  /││  ││/'
         A5 = A5 '│└──┘│/││    /│└─┘ │/│┌──┐│/┌───┘│/  ││  /│└──┘│/'
         A6 = A6 '└────┘/└┘    /└────┘/└┘  └┘/└────┘/  └┘  /└────┘/'
         A1 = A1 '┌┐  ┌┐/┌┐  ┌┐/┌┐  ┌┐/┌┐  ┌┐/┌────┐/      /      /'
         A2 = A2 '│└┐┌┘│/││  ││/│└┐┌┘│/│└┐┌┘│/└──┐ │/      /      /'
         A3 = A3 '└┐││┌┘/│└──┘│/└┐└┘┌┘/└┐└┘┌┘/  ┌┘┌┘/      /┌────┐/'
         A4 = A4 ' ││││ /│ ┌┐ │/┌┘┌┐└┐/ └┐┌┘ /┌─┘┌┘ /      /└────┘/'
         A5 = A5 ' │└┘│ /│┌┘└┐│/│┌┘└┐│/  ││  /│  └─┐/      /      /'
         A6 = A6 ' └──┘ /└┘  └┘/└┘  └┘/  └┘  /└────┘/      /      /'
*
         SEQ(" $('R' I) = CRACK($('A' I), '/')", .I, 1, 6)
*
         L = &DIGITS &UCASE ' -'
         BL = TABLE()
         I = 1
LDLUP    L LEN(1) . C REM . L                                :F(PROCESS)
         X = R1<I> '/' R2<I> '/' R3<I> '/' R4<I> '/' R5<I> '/' R6<I>
         BL<C> = X
         I = I + 1                                              :(LDLUP)
*
PROCESS  S = INPUT                                               :F(END)
         S = TRIMB(REPLACE(S, &LCASE, &UCASE))
         O = ARRAY(6)
LOOP     S LEN(1) . C REM . S                                    :F(OUT)
         X = CRACK(BL<C>, '/')
         SEQ(' O<I> = O<I> X<I>', .I)                            :(LOOP)
*
OUT      SEQ(' OUTPUT = O<I>', .I)                            :(PROCESS)
*
END START
@

